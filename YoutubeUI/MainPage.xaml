<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:YoutubeUI"
             x:DataType="app:MainPage"
             x:Class="YoutubeUI.MainPage">
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *">
            <Grid 
                Grid.Row="0"
                ColumnDefinitions="Auto, *"
                HeightRequest="80"
                Padding="10">
                <HorizontalStackLayout 
                    Grid.Column="0"
                    Spacing="10">
                    <Image
                        Source="youtube_green_second.png"
                        Aspect="AspectFill"
                        HeightRequest="40"
                        WidthRequest="60"/>

                    <Label 
                        Text="YouTube"    
                        FontAttributes="Bold"
                        FontSize="40" 
                        VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout
                    Grid.Column="1"
                    HorizontalOptions="End"
                    Spacing="10">
                    <ImageButton
                        Source="notification_bell.svg"
                        HeightRequest="40"
                        WidthRequest="30"/>

                    <ImageButton
                        Source="search.svg"
                        HeightRequest="40"
                        WidthRequest="30"/>

                    <ImageButton
                        Source="user.svg"
                        HeightRequest="40"
                        WidthRequest="30"/>
                </HorizontalStackLayout>
            </Grid>

            <Border 
                Grid.Row="1"
                Stroke="LightGray"
                StrokeShape="Rectangle"
                StrokeThickness="1"
                Padding="10">
                <ScrollView
                    Orientation="Horizontal">
                    <HorizontalStackLayout>
                        <HorizontalStackLayout
                            Spacing="5"
                            Padding="5">
                            <Image
                                Source="explore_icon.png"
                                Aspect="AspectFill"
                                HeightRequest="20"
                                WidthRequest="30"/>
                        </HorizontalStackLayout>

                        <CollectionView 
                            ItemsSource="{Binding Tags}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout
                                    Orientation="Horizontal"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate 
                                    x:DataType="app:Tag">
                                    <Border
                                        Stroke="LightGray"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 10"
                                        Margin="5, 0, 5, 0"
                                        BackgroundColor="#323232">
                                        <Label
                                            Text="{Binding Name}"
                                            Padding="10"/>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </HorizontalStackLayout>
                </ScrollView>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
